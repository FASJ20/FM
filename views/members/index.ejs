<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>members</title>
    <style>
        .container{
            width: 600px;
            height: fit-content;
            margin: 0 auto;
            margin-top: 200px;
        }
        .container .one h1 {
            font-size: 5rem;
        }
        .container .add-member {
            text-decoration: none;
        }
        .container .add-member .two {
            width: 100px;
            height: fit-content;
            border: 1px solid black;
            padding: 4px 7px;
        }
        .container .add-member .two:hover {
            background-color: rgb(28, 187, 84);
            color: white;
        }
        .container .add-member .two:active {
            background-color: black;
        }
        .body
        {
            width: 100%;
            height: fit-content;
        }
        .body .data-table {
            width: 100%;
            height: fit-content;
        }
        .body .data-table th {
            width: 50px;
            height: 20px;
            border-bottom: 1px solid black;
        }
        .body .data-table td {
            width: 50px;
            height: 20px;
            text-align: center;
            border-bottom: 1px solid black;
        }
    </style>

</head>

<body>
    <div class="container">
        <div class="top">
            <div class="one" style="display: inline;">
                <h1>Members</h1>
            </div>
                <a class="add-member" href="/member/add">
                    <div class="two">
                        Add a member
                    </div>
                </a>
            
        </div>
        <hr>
        <div class="body">
            <table class="data-table" id="data-table">
                <thead>
                    <tr>
                        <th>Firstname</th>
                        <th>lastname</th>
                        <th>Age</th>
                        <th>Date of birth</th>
                        <th>Gender</th>
                        <th>Actions</th>
                    </tr>
                    <% let items = data %>
                </thead>
                <tbody>
                    <% items.forEach(element => {%>
                        <tr>
                            <td><%= element.firstname %></td>
                            <td><%= element.lastname %></td>
                            <td><%= element.age %></td>
                            <td><%= element.dateofbirth.toISOString().split('T')[0];  %></td>
                            <td><%= element.gender %></td>
                            <td>
                                <form method="POST" action="/member/update">
                                    <button style="background-color: green;">Edit</button>
                                    <input type="hidden" name="id" value="<%= element.id %>">
                                </form>
                                <form method="POST" action="/api/member/delete/<%= element.id %>">
                                    <button style="background-color: red;">delete</button>
                                </form>
                                <a href="/member/<%= element.id %>" style= "background-color: blue;">Show</a>
                            </td>
                        </tr>
                   <% }); %>
                    
                </tbody>
            </table>
        </div>
        <hr>
    </div>
</div>


</body>
</html>